{
  "schemaVersion": 1,
  "id": "wayfix",
  "version": "${version}",

  "name": "WayFix",
  "description": "Fixes multiple issues regarding Wayland compatibility for Minecraft.",
  "authors": [
    "NotCoded"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/wayfix",
    "sources": "https://github.com/not-coded/WayFix",
    "issues": "https://github.com/not-coded/WayFix/issues"
  },

  "license": "LGPL-2.1",
  "icon": "assets/wayfix/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "net.notcoded.wayfix.WayFix"
    ],
    "modmenu": [
      "net.notcoded.wayfix.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "wayfix.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.20",
    "cloth-config2": ">=4.9.0",
    "minecraft": ">=1.16",
    "codelib": ">=2.0.0",
    "java": ">=8"
  },
  "recommends": {
    "modmenu": "*"
  }
}
